# =============================================================================
# SafeOps-LogMiner Environment Configuration
# =============================================================================
# Copy this file to .env and customize the values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=safeops123

# -----------------------------------------------------------------------------
# PostgreSQL/TimescaleDB Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=safeops
POSTGRES_PASSWORD=safeops123
POSTGRES_DB=safeops_metrics

# -----------------------------------------------------------------------------
# RabbitMQ Configuration
# -----------------------------------------------------------------------------
RABBITMQ_USER=safeops
RABBITMQ_PASSWORD=safeops123

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Webhook Security
# -----------------------------------------------------------------------------
# Secret for validating GitHub/GitLab webhook signatures
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=your-webhook-secret-here

# -----------------------------------------------------------------------------
# GitHub Integration (Optional)
# -----------------------------------------------------------------------------
# Personal access token for downloading workflow logs
# Required scopes: repo, actions:read
GITHUB_TOKEN=

# -----------------------------------------------------------------------------
# GitLab Integration (Optional)
# -----------------------------------------------------------------------------
# Personal access token for downloading job logs
# Required scopes: read_api
GITLAB_TOKEN=

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# Contamination factor for Isolation Forest (expected anomaly ratio)
CONTAMINATION=0.1

# Number of trees in the Isolation Forest
N_ESTIMATORS=100

# Random seed for reproducibility
RANDOM_STATE=42
